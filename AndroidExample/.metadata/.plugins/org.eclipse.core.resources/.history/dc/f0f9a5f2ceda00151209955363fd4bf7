package com.example.exam17_sqladapter;

import android.content.ContentValues;
import android.content.Context;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteDatabase.CursorFactory;
import android.database.sqlite.SQLiteOpenHelper;

public class CustomDBManager extends SQLiteOpenHelper{
	SQLiteDatabase db;
	public static final String  DataBaseName = "book.db";
	public static final int 	DataBaseVersion = 1;
	
	
	public CustomDBManager(Context context, String name, CursorFactory factory,
			int version) {
		super(context, name, factory, version);
	}

	@Override
	public void onCreate(SQLiteDatabase db) {
		db.execSQL(Bookmark.CREATE);
		
		insert("유관순");
		insert("이순신");
		insert("강감찬");
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
		db.execSQL("DROP TABLE IF EXISTS " + Bookmark.BOOKTABLE);
        onCreate(db);
		
	}
	
	public void insert(String name)
	{
		ContentValues values = new ContentValues();
		values.put(Bookmark.BOOK, name);
		
		
		db.insert(Bookmark.BOOKTABLE, null, values);
		
	}
	
	public Cursor allData()
	{
		Cursor c = db.query(Bookmark.BOOKTABLE, null, null, null, null, null, null);
		System.out.println(c.getColumnIndex(Bookmark.BOOK));
		return c; 
	}
	
	public void open()
	{
		db= getWritableDatabase();
	}
	
	public void close()
	{
		db.close();
	}
}
